<aura:component >
    <aura:attribute name="modalPopUpChild" type="String" required="false" description="" />
    <aura:registerEvent name="closeModal" type="c:CXE_CP_PaymentPayAsGuest_event"/>
    <!-- CANCEL MODAL -->
    <div class="mov-modal mov-modal_cancel  mov-modal_width-730" id="mov-modal_lbox">
        <div role="dialog" tabindex="-1" aria-labelledby="modal-heading-01" aria-describedby="modal-content-id-1" class="slds-modal slds-fade-in-open" id="modal-background">
            <div class="slds-modal__container">
                
                <div class="slds-modal__content slds-p-around_large mov-background-color_ffffff" id="modal-content-id-1">
                    <h4 class="slds-p-top_xx-large slds-p-bottom_xx-large">
                        We'll activate your service upon submission of the required documents for your new contract. 
                        <br /><br />
                        For further assistance, please call us at our 24/7 hotline at 16211 or business hotline at 16210.
                    </h4>
                    <div class="mov-button-group slds-p-top_large ok-cancel">
                        
                        <a class="slds-button mov-button-transparent mov-button-transparent_gray mov-element_max-width-170 close-modal" onclick="{! c.hideModal }">Cancel</a>
                        <a onclick="{! c.proceedModal }" class="slds-button mov-button mov-element_max-width-170">I Agree</a>
                    </div>
                </div>
                
            </div>
        </div>
        <div class="slds-backdrop slds-backdrop_open mov-backdrop" id="modal-background"></div>
    </div>
    <!-- END CANCEL MODAL -->
</aura:component>