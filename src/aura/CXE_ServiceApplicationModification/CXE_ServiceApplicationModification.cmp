<aura:component implements="forceCommunity:availableForAllPageTypes" controller="CXE_ServiceApplication">
    <ltng:require styles="{!$Resource.CXE_SLDS + '/salesforce-lightning-design-system.min.css'}" />
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
    <aura:attribute name="caseApplication" type="Case" default="{sobjectType: 'Case'}"/>
    <!-- <aura:attribute name="notificationOptions" type="String[]" default="SMS,Email,Both"/> -->
    <aura:attribute name="notificationOptions" type="String[]" default="Email"/>
    <aura:attribute name="yesNoOptions" type="String[]" default="Yes,No"/>
    <aura:attribute name="serviceModifications" type="String[]"/>
    <aura:attribute name="contractModifications" type="String[]"/>
    <aura:attribute name="persona" type="String" default="Business"/>
    <aura:attribute name="caseNumber" type="String"/>
    <aura:attribute name="serviceRequest" type="String" default=""/>
    <aura:attribute name="activeTab" type="String" default="One"/>
    <aura:attribute name="selectedModification" type="String"/>
    <aura:attribute name="hasSubmitted" type="Boolean" default="false"/>
    <aura:attribute name="relationToCustomerPicklist" type="String[]"/>
    <aura:attribute name="hasPreferredNotification" type="Boolean" default="false"/>
    <aura:attribute name="caseId" type="Id"/>
    <aura:attribute name="isValidFileSize" type="Boolean"/>

    <aura:handler event="c:CXE_CheckFileEvent" action="{!c.checkFile}" />

    <div aura:id="appSpinner" class="slds-spinner_container slds-is-fixed slds-hide">
        <div role="status" class="slds-spinner slds-spinner--medium">
            <span class="slds-assistive-text">Loading</span>
            <div class="slds-spinner__dot-a"></div>
            <div class="slds-spinner__dot-b"></div>
        </div>
    </div>

    <div class="container">
        <div class="slds">
            <h2 class="slds-text-heading_medium slds-text-align_center">Modify Service</h2>
            <div class="slds-tabs_scoped slds-m-top--large">
                <ul class="slds-tabs_scoped__nav CXE_scopeTabLineHeight-fix" role="tablist">
                    <li aura:id="One" class="slds-tabs_scoped__item slds-is-active" title="Request to Modify" role="presentation">
                        <a class="slds-tabs_scoped__link" role="tab" tabindex="0" aria-selected="true" aria-controls="modify-tab-scoped-1" id="modify-tab-scoped-1__item" onclick="{!c.goToTab1}">1<br />Request to Modify</a>
                    </li>
                    <li aura:id="Two" class="slds-tabs_scoped__item" title="Contact Info" role="presentation">
                        <a class="slds-tabs_scoped__link" role="tab" tabindex="1" aria-selected="false" aria-controls="modify-tab-scoped-2" id="modify-tab-scoped-2__item" onclick="{!c.goToTab2}">2<br />Contact Info</a>                    
                    </li>                    
                    <li aura:id="Three" class="slds-tabs_scoped__item" title="Value Added Services" role="presentation">
                        <a class="slds-tabs_scoped__link" role="tab" tabindex="1" aria-selected="false" aria-controls="modify-tab-scoped-3" id="modify-tab-scoped-3__item" onclick="{!c.goToTab3}">3<br />Value Added Services</a>
                    </li>
                    <li aura:id="Four" class="slds-tabs_scoped__item" title="Terms and Conditions" role="presentation">
                        <a class="slds-tabs_scoped__link" role="tab" tabindex="1" aria-selected="false" aria-controls="modify-tab-scoped-4" id="modify-tab-scoped-4__item" onclick="{!c.goToTab4}">4<br />Terms and Conditions</a>
                    </li>
                    <li aura:id="Five" class="slds-tabs_scoped__item" title="Confirmation" role="presentation">
                        <a class="slds-tabs_scoped__link" role="tab" tabindex="1" aria-selected="false" aria-controls="modify-tab-scoped-5" id="modify-tab-scoped-5__item" >5<br />Confirmation</a>
                    </li>
                </ul>
                <div aura:id="contentOne" id="modify-tab-scoped-1" class="slds-tabs_scoped__content slds-show" role="tabpanel" aria-labelledby="modify-tab-scoped-1__item">
                    <div class="slds-form-element">
                        <label class="slds-form-element__label" for="text-input-id-1">Please indicate the Service No. *</label>
                        <button aria-describedby="help" class="slds-button slds-button_icon CXE_ServiceAppSINHelpIcon">
                            <i class="slds-icon slds-icon_x-small slds-icon-text-default" aria-hidden="true" style="border-radius: 8px;
                                padding: 3px;
                                background-color: #FC7019;
                                color: white;
                                width: 16px;
                                display: inline-block;">!</i>
                            <span class="slds-assistive-text">Help</span>
                        </button>
                        <div class="slds-popover slds-popover_tooltip slds-nubbin_bottom-left" id="help" role="tooltip" style="position: absolute;
                             top: -255px;
                             left: 195px;
                             margin-left: -1rem;">
                            <div class="slds-popover__body slds-text-longform">
                            <p>
                                <img src="{!$Resource.CXE_SINTooltip}" />
                            </p>
                            </div>
                        </div>
                        <div class="slds-form-element__control">
                            <ui:inputText aura:id="modifySIN" placeholder="123456789000" class="slds-input" value="{!v.caseApplication.Account_No__c}"  required="true"/>
                        </div>
                    </div>

                    <div class="slds-form-element slds-m-top--large">
                        <label class="slds-form-element__label" for="text-input-id-1">What do you want to do?</label>
                        <fieldset class="slds-form-element slds-m-top--small">   
                            <div class="slds-form-element">                         
                                <ui:inputRadio aura:id="serviceMod" name="serviceRequestOption" change="{!c.onServiceRequestRadio}" text="Service Modification"/>
                                <label class="slds-form-element__label slds-p-left--small">Service Modification</label>                            
                                <button aria-describedby="help" class="slds-button slds-button_icon CXE_ServiceAppSINHelpIcon">
                                        <i class="slds-icon slds-icon_x-small slds-icon-text-default" aria-hidden="true" style="border-radius: 8px;
                                                                                                                                padding: 3px;
                                                                                                                                background-color: #FC7019;
                                                                                                                                color: white;
                                                                                                                                width: 16px;
                                                                                                                                display: inline-block;">!</i>
                                    <span class="slds-assistive-text">Help</span>
                                </button>
                                <div class="slds-popover slds-popover_tooltip slds-nubbin_bottom-left" id="help" role="tooltip" style="position: absolute; top: -50px;">
                                    <div class="slds-popover__body slds-text-longform">
                                        These are  requests about your electricity load or meters.
                                    </div>
                                </div>
                            </div>
                            <br />
                            <div class="slds-form-element">   
                            <div aura:id="serviceRequestServiceOption" class="slds-form-element__control slds-m-left--medium slds-hide">
                                <aura:iteration items="{!v.serviceModifications}" var="serviceModification">
                                    <ui:inputRadio aura:id="serviceReqForService" name="serviceOption" change="{!c.onServiceRadio}" text="{!serviceModification}"/>
                                    <label class="slds-form-element__label slds-p-left--small">{!serviceModification}</label> <br />
                                </aura:iteration>
                            </div>
                            <ui:inputRadio aura:id="contractMod" name="serviceRequestOption" change="{!c.onServiceRequestRadio}" text="Contract Modification"/>
                            <label class="slds-form-element__label slds-p-left--small">Contract Modification</label>
                            <button aria-describedby="help" class="slds-button slds-button_icon CXE_ServiceAppSINHelpIcon">
                                        <i class="slds-icon slds-icon_x-small slds-icon-text-default" aria-hidden="true" style="border-radius: 8px;
                                                                                                                                padding: 3px;
                                                                                                                                background-color: #FC7019;
                                                                                                                                color: white;
                                                                                                                                width: 16px;
                                                                                                                                display: inline-block;">!</i>
                                    <span class="slds-assistive-text">Help</span>
                                </button>
                                <div class="slds-popover slds-popover_tooltip slds-nubbin_bottom-left" id="help" role="tooltip" style="position: absolute; top: -70px;">
                                    <div class="slds-popover__body slds-text-longform">
                                        These are requests about changes in your contract information e.g. changing from single name to married name, transfer of bill ownership, etc.
                                    </div>
                                </div>
                            </div>
                            <br />
                            <div aura:id="serviceRequestContractOption" class="slds-form-element__control slds-m-left--medium slds-hide">
                                <aura:iteration items="{!v.contractModifications}" var="contractModification">
                                    <ui:inputRadio aura:id="serviceReqForContract" name="serviceOption" change="{!c.onContractRadio}" text="{!contractModification}"/>
                                    <label class="slds-form-element__label slds-p-left--small">{!contractModification}</label> <br />
                                </aura:iteration>
                                <div class="slds-form-element slds-m-top--large">
                                    <label class="slds-form-element__label" for="text-input-id-1">To new registered customer</label>

                                    <aura:if isTrue="{!v.persona == 'Business'}" >
                                        <div class="slds-grid slds-wrap slds-grid_pull-padded-small">
                                            <div class="slds-p-top--small slds-p-horizontal_small slds-form-element__control slds-large-size--1-of-1 slds-medium-size--1-of-1 slds-small-size--1-of-1 slds-max-small-size--1-of-1">
                                                <ui:inputText aura:id="businessName" placeholder="Meralco" class="slds-input" value="{!v.caseApplication.CXE_Web_Business_Name__c}" label="Company Name" labelClass="slds-form-element__label" required="true"/>
                                            </div>

                                            <div class="slds-p-top--small slds-p-horizontal_small slds-form-element__control slds-large-size--1-of-1 slds-medium-size--1-of-1 slds-small-size--1-of-1 slds-max-small-size--1-of-1">
                                                <ui:inputText aura:id="doingBusinessAs" placeholder="Meralco" class="slds-input" value="{!v.caseApplication.CXE_Web_Doing_Business_As__c}" label="Doing Business As" labelClass="slds-form-element__label"/>
                                            </div>
                                            
                                            <div class="slds-p-top--small slds-p-horizontal_small slds-form-element__control slds-large-size--1-of-1 slds-medium-size--1-of-1 slds-small-size--1-of-1 slds-max-small-size--1-of-1">
                                                <ui:inputText aura:id="businessEmail" placeholder="cxe_business@meralco.com" class="slds-input" value="{!v.caseApplication.CXE_Web_Business_Primary_Email__c}" label="Business Email Address" labelClass="slds-form-element__label"/>
                                            </div>

                                            <div class="slds-p-top--small slds-p-horizontal_small slds-form-element__control slds-large-size--1-of-2 slds-medium-size--1-of-2 slds-small-size--1-of-1 slds-max-small-size--1-of-1">
                                                <ui:inputText aura:id="businessLandline" placeholder="+6321234567" class="slds-input" value="{!v.caseApplication.CXE_Web_Business_Landline__c}" label="Business Landline" labelClass="slds-form-element__label" required="true"/>
                                            </div>

                                            <div class="slds-p-top--small slds-p-horizontal_small slds-form-element__control slds-large-size--1-of-2 slds-medium-size--1-of-2 slds-small-size--1-of-1 slds-max-small-size--1-of-1">
                                                
                                            </div>

                                            <div class="slds-p-top--small slds-p-horizontal_small slds-form-element__control slds-large-size--1-of-2 slds-medium-size--1-of-2 slds-small-size--1-of-1 slds-max-small-size--1-of-1">
                                                <ui:inputText aura:id="modifyBusinessFirstname" placeholder="Juan" class="slds-input" value="{!v.caseApplication.CXE_Web_First_Name__c}" label="First Name" labelClass="slds-form-element__label" required="true"/>
                                            </div>

                                            <div class="slds-p-top--small slds-p-horizontal_small slds-form-element__control slds-large-size--1-of-2 slds-medium-size--1-of-2 slds-small-size--1-of-1 slds-max-small-size--1-of-1">
                                                <ui:inputText aura:id="modifyBusinessLastname" placeholder="Dela Cruz" class="slds-input" value="{!v.caseApplication.CXE_Web_Last_Name__c}" label="Last Name" labelClass="slds-form-element__label" required="true"/>
                                            </div>

                                            <div class="slds-p-top--small slds-p-horizontal_small slds-form-element__control slds-large-size--1-of-1 slds-medium-size--1-of-1 slds-small-size--1-of-1 slds-max-small-size--1-of-1">
                                                <ui:inputText aura:id="modifyBusinessEmailAddress" placeholder="cxe_user@meralco.com" class="slds-input" value="{!v.caseApplication.CXE_Web_Primary_Email__c}" label="Email Address" labelClass="slds-form-element__label" required="true"/>
                                            </div>

                                            <div class="slds-p-top--small slds-p-horizontal_small slds-form-element__control slds-large-size--1-of-2 slds-medium-size--1-of-2 slds-small-size--1-of-1 slds-max-small-size--1-of-1">
                                                <ui:inputText aura:id="modifyBusinessMobileNumber" placeholder="+631234567890" class="slds-input" value="{!v.caseApplication.CXE_Web_Primary_Mobile__c}" label="Mobile Number" labelClass="slds-form-element__label" required="true"/>
                                            </div>                              
                                            <div class="slds-p-top--small slds-p-horizontal_small slds-form-element__control slds-large-size--1-of-3 slds-medium-size--1-of-3 slds-small-size--1-of-1 slds-max-small-size--1-of-1">
                                                <ui:inputText aura:id="businessDesignation" placeholder="Manager" class="slds-input" value="{!v.caseApplication.CXE_Authorized_Rep_Designation__c}" label="Designation" labelClass="slds-form-element__label" required="true"/>                                    
                                            </div>
                                        </div>
                                    </aura:if>
                                    <aura:if isTrue="{!v.persona == 'Individual'}" >
                                        <div class="slds-grid slds-wrap slds-grid_pull-padded-small">
                                            <div class="slds-p-top--small slds-p-horizontal_small slds-form-element__control slds-large-size--1-of-3 slds-medium-size--1-of-3 slds-small-size--1-of-1 slds-max-small-size--1of-1">
                                                <ui:inputText aura:id="modifyFirstname" placeholder="Juan" class="slds-input" value="{!v.caseApplication.CXE_Web_First_Name__c}" label="First Name" labelClass="slds-form-element__label" required="true"/>
                                            </div>

                                            <div class="slds-p-top--small slds-p-horizontal_small slds-form-element__control slds-large-size--1-of-3 slds-medium-size--1-of-3 slds-small-size--1-of-1 slds-max-small-size--1of-1">
                                                <ui:inputText aura:id="modifyMiddlename" placeholder="Pedro" class="slds-input" value="{!v.caseApplication.CXE_Web_Middle_Name__c}" label="Middle Name" labelClass="slds-form-element__label"/>
                                            </div>

                                            <div class="slds-p-top--small slds-p-horizontal_small slds-form-element__control slds-large-size--1-of-3 slds-medium-size--1-of-3 slds-small-size--1-of-1 slds-max-small-size--1of-1">
                                                <ui:inputText aura:id="modifyLastname" placeholder="Dela Cruz" class="slds-input" value="{!v.caseApplication.CXE_Web_Last_Name__c}" label="Last Name" labelClass="slds-form-element__label" required="true"/>
                                            </div>

                                            <div class="slds-p-top--small slds-p-horizontal_small slds-form-element__control slds-large-size--1-of-1 slds-medium-size--1-of-1 slds-small-size--1-of-1 slds-max-small-size--1of-1">
                                                <ui:inputText aura:id="modifyEmailAddress" placeholder="cxe_user@meralco.com" class="slds-input" value="{!v.caseApplication.CXE_Web_Primary_Email__c}" label="Email Address" labelClass="slds-form-element__label" required="true"/>
                                            </div>

                                            <div class="slds-p-top--small slds-p-horizontal_small slds-form-element__control slds-large-size--1-of-2 slds-medium-size--1-of-2 slds-small-size--1-of-1 slds-max-small-size--1of-1">
                                                <ui:inputText aura:id="modifyMobileNumber" placeholder="+631234567890" class="slds-input" value="{!v.caseApplication.CXE_Web_Primary_Mobile__c}" label="Mobile #" labelClass="slds-form-element__label" required="true"/>
                                            </div>

                                            <div class="slds-p-top--small slds-p-horizontal_small slds-form-element__control slds-large-size--1-of-2 slds-medium-size--1-of-2 slds-small-size--1-of-1 slds-max-small-size--1of-1">
                                                <ui:inputText aura:id="modifyLandlineNumber" placeholder="021234567" class="slds-input" value="{!v.caseApplication.CXE_Web_Primary_Phone__c}" label="Landline" labelClass="slds-form-element__label"/>
                                            </div>
                                        </div>
                                    </aura:if>
                                </div>
                            </div>
                        </fieldset>
                    </div>                    
                    <br />
                    <div class="slds-text-align--center">                        
                        <ui:button aura:id="modifyGoToTab2" class="slds-button slds-button_brand" press="{!c.goToTab2}" label="NEXT"/>
                    </div>
                </div>
                
                <div aura:id="contentTwo" id="modify-tab-scoped-2" class="slds-tabs_scoped__content  slds-hide" role="tabpanel" aria-labelledby="modify-tab-scoped-2__item">
                    <div class="slds-form-element slds-m-top--large">
                        <label class="slds-form-element__label" for="text-input-id-1">Who will be processing the request for modification?</label>
                        <div class="slds-grid slds-wrap slds-grid_pull-padded-small">
                            <div class="slds-p-top--small slds-p-horizontal_small slds-form-element__control slds-large-size--1-of-3 slds-medium-size--1-of-3 slds-small-size--1-of-1 slds-max-small-size--1of-1">
                                <ui:inputText aura:id="repFirstname" placeholder="Juan" class="slds-input" value="{!v.caseApplication.Authorized_Representative_First_Name__c}" label="First Name" labelClass="slds-form-element__label" required="true"/>
                            </div>

                            <div class="slds-p-top--small slds-p-horizontal_small slds-form-element__control slds-large-size--1-of-3 slds-medium-size--1-of-3 slds-small-size--1-of-1 slds-max-small-size--1of-1">
                                <ui:inputText aura:id="RepMiddlename" placeholder="Pedro" class="slds-input" value="{!v.caseApplication.Authorized_Representative_Middle_Name__c}" label="Middle Name" labelClass="slds-form-element__label"/>
                            </div>

                            <div class="slds-p-top--small slds-p-horizontal_small slds-form-element__control slds-large-size--1-of-3 slds-medium-size--1-of-3 slds-small-size--1-of-1 slds-max-small-size--1of-1">
                                <ui:inputText aura:id="repLastname" placeholder="Dela Cruz" class="slds-input" value="{!v.caseApplication.Authorized_Representative_Last_Name__c}" label="Last Name" labelClass="slds-form-element__label" required="true"/>
                            </div>

                            <div class="slds-p-top--small slds-p-horizontal_small slds-form-element__control slds-large-size--1-of-3 slds-medium-size--1-of-3 slds-small-size--1-of-1 slds-max-small-size--1of-1">
                                <ui:inputText aura:id="repEmailAddress" placeholder="cxe_user@meralco.com" class="slds-input" value="{!v.caseApplication.Authorized_Representative_Email__c}" label="Email Address" labelClass="slds-form-element__label" required="true"/>
                            </div>

                            <div class="slds-p-top--small slds-p-horizontal_small slds-form-element__control slds-large-size--1-of-3 slds-medium-size--1-of-3 slds-small-size--1-of-1 slds-max-small-size--1of-1">
                                <ui:inputText aura:id="repMobileNumber" placeholder="+631234567890" class="slds-input" value="{!v.caseApplication.Authorized_Rep_Primary_Contact_Number__c}" label="Mobile Number" labelClass="slds-form-element__label" required="true"/>
                            </div>
                            <aura:if isTrue="{!or(v.persona == 'Individual', v.persona == 'Contractor')}" >  
                                <div class="slds-p-top--small slds-p-horizontal_small slds-form-element__control slds-large-size--1-of-3 slds-medium-size--1-of-3 slds-small-size--1-of-1 slds-max-small-size--1of-1">
                                    <!-- <label class="slds-form-element__label">Relationship</label>
                                    <force:inputField class="dynamic" aura:id="RelationToCustomer" value="{!v.caseApplication.Relationship__c}"/> -->
                                    <ui:inputSelect aura:id="selectedRelationToOwner" labelClass="slds-form-element__label" label="Relation to Customer" change="{!c.onChangeRelationToOwner}">
                                        <aura:iteration items="{!v.relationToCustomerPicklist}" var="relationToOwner">
                                             <ui:inputSelectOption text="{!relationToOwner}" label="{!relationToOwner}"/>
                                        </aura:iteration>
                                    </ui:inputSelect>                                    
                                </div>
                            </aura:if>
                            <aura:if isTrue="{!and(v.persona == 'Business',v.selectedModification == 'Service Modification')}" >  
                                <div class="slds-p-top--small slds-p-horizontal_small slds-form-element__control slds-large-size--1-of-3 slds-medium-size--1-of-3 slds-small-size--1-of-1 slds-max-small-size--1-of-1">
                                    <ui:inputText aura:id="designation" placeholder="Manager" class="slds-input" value="{!v.caseApplication.CXE_Authorized_Rep_Designation__c}" label="Designation" labelClass="slds-form-element__label"/>                                    
                                </div>
                            </aura:if>
                            
                        </div>
                        <br />

                        
                        
                        <br />
                        <div class="slds-text-align--center">
                            <!-- <button class="slds-button slds-button_brand CXE_button-toPage1">PREVIOUS</button> -->
                            <!-- <button class="slds-button slds-button_brand CXE_button-toPage3">NEXT</button> -->
                            <ui:button aura:id="modifyGoToTab3" class="slds-button slds-button_brand" press="{!c.goToTab3}" label="NEXT"/>
                        </div>
                    </div>
                </div>

                <div aura:id="contentThree" id="modify-tab-scoped-3" class="slds-tabs_scoped__content  slds-hide" role="tabpanel" aria-labelledby="modify-tab-scoped-3__item">
                    <!-- <div class="slds-hide"> -->
                        <div class="CXE_color--gray slds-m-top--small slds-large-size--3-of-4 slds-medium-size--3-of-4 slds-small-size--1-of-1 slds-max-small-size--1-of-1 CXE_text--size-14">How would you like to be updated about the status of this application?</div>
                        <div class="slds-m-top--small slds-large-size--1-of-4 slds-medium-size--1-of-4 slds-small-size--1-of-1 slds-max-small-size--1-of-1">
                            <aura:iteration items="{!v.notificationOptions}" var="notificationOption">
                                <ui:inputRadio name="notifications" change="{!c.onNotificationRadio}" text="{!notificationOption}"/>
                                <label class="slds-p-left--small">{!notificationOption}</label><br />
                            </aura:iteration>
                        </div>
                        <br />
